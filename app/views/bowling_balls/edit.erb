<h1>Edit <%= @ball.name %></h1>

<form action="/balls/<%=@ball.id %>" method="POST">
  <label> Bowling Ball Name </label>
  <input type="text" name="name" value="<%=@ball.name %>"> </br>

  <label> Bowling Ball Manufacturer </label>
  <input type="text" name="manufacturer" value="<%=@ball.manufacturer%>"> </br>

  <label> Which Bag does this Bowling Ball belong in? </label>
  <select name="golf_bag_id">
    <% current_user.bowling_bags.each do |bag| %>
      <option value=<%=bag.id %> <%= "selected" if bag.id==@ball.bowling_bag.id %> ><%= bag.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Update">
</form>